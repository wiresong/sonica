{
    "name": "sonica-beta",
    "displayName": "Sonica Beta",
    "description": "Sonic indications for lines over a specified limit",
    "publisher": "wiresong",
    "version": "0.2.0",
    "repository": "https://github.com/wiresong/sonica",
    "extensionKind": [
        "ui"
    ],
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Sonica",
            "properties": {
                "sonica.enabled": {
                    "type": "boolean",
                    "default": "true",
                    "description": "Determine if the extension is enabled"
                },
                "sonica.enablePanning": {
                    "type": "boolean",
                    "default": false,
                    "description": "Determine if the cursor pans as you type"
                },
                "sonica.enableDiagnostics": {
                    "type": "boolean",
                    "default": false,
                    "description": "Determine if diagnostic sounds are played when diagnostics are shown"
                },
                "sonica.volume": {
                    "type": "number",
                    "default": 0.25,
                    "description": "the volume of the cursor and rulers, in the range [0, 1]"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.70.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "@vscode/test-electron": "^2.1.5",
        "eslint": "^8.34.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "ts-loader": "^9.3.1",
        "typescript": "^4.9.5",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    }
}
